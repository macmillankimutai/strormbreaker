#if($rangerName)
  <h2>Hello, $rangerName!</h2>
  <h3>Recent Sightings</h3>
  #if($recentSightings.size() > 0)
    <ul>
      #foreach($sighting in $recentSightings)
      <li><a href="/sightings/$sighting.getId()">Ranger: $sighting.getRangerName() at $sighting.getFormattedDate()</a></li>
      #end
    </ul>
  #else
    <h5>No recent sightings!</h5>
  #end
  #else
    <h2>Please enter your name:</h2>
    <form action="/" method="post">
        <label for="rangerName">Enter name:</label>
        <input type="text" name="rangerName" class="form-control" required>
      <button type="submit" name="button" class="btn btn-primary">Name</button>
    </form>
  #end
